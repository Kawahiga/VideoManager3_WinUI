<Window
    x:Class="VideoManager3_WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VideoManager3_WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d"
    Closed="Window_Closed">

    <!-- ウィンドウ全体のレイアウトを定義するGrid -->
    <Grid x:Name="RootGrid" AllowDrop="True" DragOver="Window_DragOver" Drop="Window_Drop" Tapped="RootGrid_Tapped">
        <Grid.RowDefinitions>
            <!-- 上部ツールバー用の行 -->
            <RowDefinition Height="Auto"/>
            <!-- メインコンテンツエリア用の行（残りの領域すべて） -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 上部ツールバー -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <!-- ファイル操作系 -->
                <ColumnDefinition Width="Auto"/>
                <!-- 検索、ソートなど表示系 -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <CommandBar Grid.Column="0" DefaultLabelPosition="Right" Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                <!-- 参照先なしDBのクリーンアップボタン（未実装） -->
                <AppBarButton Icon="Setting" Label="設定"/>
                <!-- 作業フォルダ設定ボタン -->
                <AppBarButton Icon="Folder" Label="{Binding HomeFolderPath}" Command="{Binding SetHomeFolderCommand}"/>
                <!-- フォルダ追加ボタン -->
                <AppBarButton Icon="Add" Label="フォルダを追加" Command="{Binding AddFolderCommand}"/>
                <AppBarSeparator/>
                <!-- 削除ボタン -->
                <AppBarButton Icon="Delete" Label="削除" Command="{Binding DeleteFileCommand}"/>
                <!-- タグ編集ボタン -->
                <AppBarButton x:Name="TagEditButton" Icon="Tag" Label="タグを編集" Click="TagEditFlyout_Opening"/>
                <!-- いいねボタン -->
                <AppBarButton Icon="Like" Label="{Binding SelectedItem.LikeCount}" Click="LikeButton_Click" RightTapped="LikeButton_RightTapped"/>
            </CommandBar>
            
            <CommandBar Grid.Column="1" DefaultLabelPosition="Right" Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                <!-- サムネイルサイズ調整スライダー -->
                <AppBarElementContainer VerticalAlignment="Center" Visibility="{Binding IsGridView, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Slider x:Name="ThumbnailSizeSlider" Minimum="100" Maximum="400" Width="200" Value="{Binding ThumbnailSize, Mode=TwoWay}"/>
                </AppBarElementContainer>
                <!-- 表示切替ボタン（詳細表示） -->
                <AppBarButton Label="詳細" Icon="List" Command="{Binding ToggleViewCommand}" IsEnabled="{Binding IsGridView}" Visibility="{Binding IsGridView, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <!-- 表示切替ボタン（サムネイル表示） -->
                <AppBarButton Label="サムネイル" Icon="ViewAll" Command="{Binding ToggleViewCommand}" IsEnabled="{Binding IsListView}" Visibility="{Binding IsListView, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <AppBarSeparator/>
                <!-- ソートボタン（フライアウト付き） -->
                <AppBarButton Icon="Sort" Click="SortButton_Click"/>
                <!-- 検索ボックス -->
                <AppBarElementContainer>
                    <AutoSuggestBox x:Name="SearchBox" QueryIcon="Find" PlaceholderText="検索" Width="200" Margin="0,8,10,0" Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </AppBarElementContainer>
            </CommandBar>
        </Grid>


        <!-- メインコンテンツエリア (左ペイン + 右ペイン) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- 左ペイン: タグツリー -->
                <ColumnDefinition Width="240" MinWidth="100"/>
                <!-- 縦方向のグリッドスプリッター -->
                <ColumnDefinition Width="5"/>
                <!-- 右ペイン: 動画リストと詳細情報 -->
                <ColumnDefinition Width="*" MinWidth="200"/>
            </Grid.ColumnDefinitions>

            <!-- 左ペイン: （タグツリー or アーティストリスト） -->
            <Grid Grid.Column="0" Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" Background="LightGray" HorizontalAlignment="Center" Click="ToggleLeftPain_Click" Visibility="{Binding IsTreeView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="タグツリー"  TextAlignment="Center" FontWeight="Bold" Margin="3"/>
                    </Button>

                    <!-- タグを表示するTreeView -->
                    <TreeView Grid.Row="1" x:Name="TagsTreeView"
                        ItemsSource="{Binding TagItems, Mode=TwoWay}"
                        SelectedItem="{Binding SelectedTag, Mode=TwoWay}"
                        Margin="5,0,5,5"
                        ScrollViewer.VerticalScrollBarVisibility="Visible"
                        Visibility="{Binding IsTreeView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TreeView.ItemTemplate>
                            <!-- 各タグアイテムの表示形式を定義 -->
                            <DataTemplate x:DataType="local:TagItem">
                                <TreeViewItem ItemsSource="{x:Bind Children}" IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}">
                                    <Grid Height="14">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- タグの色と名前を表示するパネル -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <Rectangle Width="16" Height="12" Fill="{x:Bind Color}" Margin="0,0,5,0" VerticalAlignment="Center" Visibility="{x:Bind IsNotEditing, Mode=OneWay}"/>
                                            <CheckBox IsChecked="{x:Bind IsChecked, Mode=TwoWay}" MinWidth="16" Width="16" Margin="0,0,5,0" Visibility="{x:Bind IsEditing, Mode=OneWay}"/>
                                            <TextBlock Text="{x:Bind Name, Mode=OneWay}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <!-- タグの動画数を表示するボーダー -->
                                        <Border Grid.Column="1" Background="LightSlateGray"  CornerRadius="4" VerticalAlignment="Center" HorizontalAlignment="Right" BorderBrush="DarkBlue" BorderThickness="1">
                                            <TextBlock Text="{x:Bind TagVideoCount, Mode=OneWay}" Foreground="White" Margin="5,0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                            
                                        </Border>
                                    </Grid>
                                    <!-- 右クリックメニュー -->
                                    <TreeViewItem.ContextFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem Text="タグを編集" Click="TagEdit"/>
                                            <MenuFlyoutItem Text="タグを追加"/>
                                        </MenuFlyout>
                                    </TreeViewItem.ContextFlyout>
                                </TreeViewItem>
                            </DataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>

                    <Button Grid.Row="0" Background="LightGray" HorizontalAlignment="Center" Click="ToggleLeftPain_Click" Visibility="{Binding IsArtistView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="女優一覧"  TextAlignment="Center" FontWeight="Bold" Margin="3"/>
                    </Button>

                    <ListView Grid.Row="1" ItemsSource="{Binding ArtistItems}" SelectedItem="{Binding SelectedArtist, Mode=TwoWay}" Visibility="{Binding IsArtistView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:ArtistItem">
                                <Grid Margin="5,0,5,5" Height="30">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <!-- 女優のサムネイル画像 -->
                                        <Rectangle Width="16" Height="12" Fill="{x:Bind ArtistColor}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                        <!-- 女優の名前 -->
                                        <TextBlock Grid.Column="1" Text="{x:Bind Name}" VerticalAlignment="Center" IsTextSelectionEnabled="True"/>
                                    </StackPanel>
                                    <!-- 女優の動画数を表示するボーダー -->
                                    <Border Grid.Column="1" Background="LightSlateGray" CornerRadius="4" VerticalAlignment="Center" HorizontalAlignment="Right" BorderBrush="DarkBlue" BorderThickness="1">
                                        <TextBlock Text="{x:Bind VideosInArtist.Count}" Foreground="White" Margin="5,0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </Grid>
            </Grid>

            <!-- 縦方向のグリッドスプリッター -->
            <controls:GridSplitter Grid.Column="1" Width="5" ResizeBehavior="BasedOnAlignment" ResizeDirection="Auto" Background="Transparent"/>

            <!-- 右ペイン: 上下に分割 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <!-- 動画リスト -->
                    <RowDefinition Height="*"/>
                    <!-- 横方向のグリッドスプリッター -->
                    <RowDefinition Height="5"/>
                    <!-- 詳細情報 -->
                    <RowDefinition Height="Auto" MinHeight="130"/>
                </Grid.RowDefinitions>

                <!-- 右ペイン上部: 動画リスト -->
                <Grid Grid.Row="0">
                    <!-- 詳細表示 (リスト形式) -->
                    <ListView
                        ItemsSource="{Binding FilteredVideos}"
                        Visibility="{Binding IsListView, Converter={StaticResource BooleanToVisibilityConverter}}"
                        DoubleTapped="GridView_DoubleTapped"
                        SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:VideoItem">
                                <TextBlock Text="{Binding FileName}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- サムネイル表示 (グリッド形式) -->
                    <GridView
                        ItemsSource="{Binding FilteredVideos}"
                        SelectionMode="Single"
                        IsItemClickEnabled="True"
                        SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                        Visibility="{Binding IsGridView, Converter={StaticResource BooleanToVisibilityConverter}}"
                        DoubleTapped="GridView_DoubleTapped"
                        ContainerContentChanging="GridView_ContainerContentChanging">
                        <!-- UI仮想化のためのイベントハンドラ -->
                        <GridView.ItemTemplate>
                            <!-- 各動画アイテムの表示形式を定義 -->
                            <DataTemplate x:DataType="local:VideoItem">
                                <Grid
                                    Width="{Binding DataContext.ThumbnailSize, ElementName=RootGrid}"
                                    Margin="5"
                                    Padding="5"
                                    Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <!-- サムネイル画像 -->
                                    <Image
                                        Grid.Row="0" Stretch="UniformToFill"
                                        Width="{Binding DataContext.ThumbnailSize, ElementName=RootGrid}"
                                        Height="{Binding DataContext.ThumbnailHeight, ElementName=RootGrid}">
                                        <Image.Source>
                                            <!-- 表示用のThumbnailImageプロパティにバインド -->
                                            <Binding Path="ThumbnailImage" Mode="OneWay">
                                                <!-- 画像がnullの場合の代替画像 -->
                                                <Binding.TargetNullValue>
                                                    <BitmapImage UriSource="ms-appx:///Assets/SplashScreen.scale-200.png"/>
                                                </Binding.TargetNullValue>
                                            </Binding>
                                        </Image.Source>
                                    </Image>

                                    <!-- いいね数 -->
                                    <Border Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top">
                                        <Grid Width="32" Height="32">
                                            <TextBlock Text="&#xEB52;" FontFamily="Segoe MDL2 Assets" Foreground="DeepPink" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding LikeCount}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11" FontWeight="Bold" Padding="0,0,0,5"/>
                                        </Grid>
                                    </Border>

                                    <!-- アーティスト一覧 -->
                                    <ItemsControl Grid.Row="1" ItemsSource="{Binding ArtistsInVideo}" Margin="0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <controls:WrapPanel  Height="16" Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="local:TagItem">
                                                <Border Background="{Binding ArtistColor}" CornerRadius="4" Margin="0">
                                                    <TextBlock Text="{Binding Name}" Foreground="{Binding TextColor}" Padding="3,1" FontSize="10"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- タグ一覧 -->
                                    <ItemsControl Grid.Row="2" ItemsSource="{Binding VideoTagItems}" Margin="0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <controls:WrapPanel  Height="16" Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="local:TagItem">
                                                <Border Background="{Binding Color}" CornerRadius="4" Margin="0">
                                                    <TextBlock Text="{Binding Name}" Foreground="{Binding TextColor}" Padding="3,1" FontSize="10"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- ファイル名 -->
                                    <TextBlock Grid.Row="3" Text="{Binding FileNameWithoutArtists}" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" Height="38" Margin="5,2"/>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>

                <!-- 横方向のグリッドスプリッター -->
                <controls:GridSplitter Grid.Row="1" Height="5" ResizeDirection="Rows" ResizeBehavior="BasedOnAlignment" Background="Transparent" HorizontalAlignment="Stretch" />

                <!-- 右ペイン下部: 詳細情報 -->
                <Grid Grid.Row="2" Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}" Padding="15">
                    <!-- 選択されたアイテム(SelectedItem)の情報を表示するパネル -->
                    <StackPanel DataContext="{Binding SelectedItem}">

                        <!-- ファイル名 -->
                        <TextBox Text="{Binding FileNameWithoutArtists}" FontWeight="Bold" FontSize="16" TextWrapping="Wrap" Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}" BorderBrush="{ThemeResource SystemControlPageBackgroundChromeLowBrush}" Margin="0,0,0,10"/>

                         <!-- ファイルに設定されたアーティスト一覧 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="出演:" FontWeight="SemiBold" Margin="0,5,10,5" VerticalAlignment="Top"/>
                            <!-- アーティスト名を横に並べるためのItemsControl -->
                            <ItemsControl Grid.Column="1" ItemsSource="{Binding ArtistsInVideo}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <controls:WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <!-- 各アーティストの表示形式 -->
                                    <DataTemplate x:DataType="local:TagItem">
                                        <Border Background="{Binding ArtistColor}" CornerRadius="4" Margin="0,0,8,5">
                                            <TextBlock Text="{Binding Name}" Foreground="{Binding TextColor}" IsTextSelectionEnabled="True" Padding="8,3" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>

                        <!-- ファイルに設定されたタグ一覧 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="タグ:" FontWeight="SemiBold" Margin="0,5,10,5" VerticalAlignment="Top"/>
                            <!-- タグを横に並べるためのItemsControl -->
                            <ItemsControl Grid.Column="1" ItemsSource="{Binding VideoTagItems}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <controls:WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <!-- 各タグの表示形式 -->
                                    <DataTemplate x:DataType="local:TagItem">
                                        <Border Background="{Binding Color}" CornerRadius="4" Margin="0,0,8,5">
                                            <TextBlock Text="{Binding Name}" Foreground="{Binding TextColor}" IsTextSelectionEnabled="True" Padding="8,3" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>

                        <!-- 更新日時、サイズ、長さ -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto" MinWidth="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto" MinWidth="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto" MinWidth="20"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="更新日時:" FontWeight="SemiBold" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding LastModified}" Margin="0,0,20,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="サイズ:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding FileSize, Converter={StaticResource FileSizeConverter}}" Margin="0,0,20,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="4" Text="長さ:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                            <TextBlock Grid.Row="0" Grid.Column="5" Text="{Binding Duration, Converter={StaticResource DurationConverter}}" Margin="0,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>